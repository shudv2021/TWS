<%= render 'shared/errors', object: @question %>
<%= form_with model: @question do |f|%>
  <div class="mb-3 row">
    <%= f.text_area :text, size: '70x5',
    placeholder: 'input new question', class: 'form-control-lg mb-3'%>
    <div class="mb-3 row">
      <%= f.select :subject_id, subject_list, {}, class: 'form-select form-select-lg' %> 
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.submit 'Create question', class: 'btn btn-success'%>
  </div>
<%end%> 