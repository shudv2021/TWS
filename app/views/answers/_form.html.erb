      <div class="container">
        <%= render 'shared/errors', object: @answer %>
        <%=form_with model: [@question, @answer] do |f|%>
          <div class="mb-3 row">
            <div class="col-2"> <%= f.label :body, class: 'col-form-label' %> </div>
            <div class="col-10"> <%= f.text_area :body, class: 'form-control' %> </div>
          </div>
          
          <div class="mb-3 row">
            <div class="col-2"><%= f.label :right, class: 'col-form-label' %> </div>
            <div class="col-2"><%= f.check_box :right, class: 'form-check-input'%> </div>
          </div>
          
          <div class="mb-3 row">
            <div class="col-2"> <%= f.label :image_path%> </div>
            <div class="col-10"> <%= f.text_area :image_path, class: 'form-control'%> </div>
          </div>
            <div> <%= f.submit 'Create answer', class: 'btn btn-success'%> </div>
        <%end%>
        </div>