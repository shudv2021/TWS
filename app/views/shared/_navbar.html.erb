<%= provide :navbar do%>
<header class="p-3 bg-dark text-white">
      <div class="container">
        <nav class="d-flex flex-wrap align-item-center justify-content-center justyfy-content-lg-start">
          <ul class="nav col-lg-auto me-lg-auto mb-2 justify-content-center mb-mb-0" >
            <li>
              <%=nav_to "Home", root_path, class: 'nav-link px-2', current_page: current_page%>
            </li>
            
            <li>
            <%=nav_to "Questions", questions_path, class: 'nav-link px-2', current_page: current_page%>
            </li>
          </ul>
          <ul class="nav col-12 col-lg-auto mb-2 mb-mb-0 ">
            <%if user_signed_in? %>
            <li class="dropdown">
              <%= nav_to current_user.phone, '#', class: 'nav-link px-2 dropdown-toggle', 
                data: {"bs-toggle": 'dropdown'}, current_page: current_page %>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Edit user", edit_user_path(current_user), class: 'dropdown-item'%>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li> 
                      <%= link_to 'Log Out', session_path, class: 'dropdown-item',
                      data:{method: :delete} %> 
                  </li>
                  
                  
                </ul>
                
            </li>
            <%else%>
            <li>
              <%=nav_to "Sign Up", new_user_path, class: 'nav-link px-2 ', current_page: current_page %>
            </li>
            
            <li>
              <%=nav_to "Log In", new_session_path, class: 'nav-link px-2 ', current_page: current_page %>
            </li>
            <%end%>
          </ul>
        </nav>
      </div>
    </header>
  <%end%>